{
  "name": "Spring Boot + Oracle",
  "dockerComposeFile": "../docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/app",

  "customizations": {
    "vscode": {
      "extensions": [
        "vscjava.vscode-java-pack",
        "pivotal.vscode-spring-boot",
        "ms-vscode.vscode-docker"
      ]
    }
  },

  "forwardPorts": [8080, 1521, 5005],
  "portsAttributes": {
    "8080": {
      "label": "Spring Boot",
      "onAutoForward": "openBrowser"
    },
    "1521": {
      "label": "Oracle DB",
      "onAutoForward": "ignore"
    },
    "5005": {
      "label": "Debug Port",
      "onAutoForward": "ignore"
    }
  },

  "postCreateCommand": "echo 'Environment ready! App will start automatically.'",
  "remoteUser": "root"
}